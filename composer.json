{
    "name":         "rmiller/behat-spec",
    "description":  "Behat and PhpSpec integration",
    "keywords":     ["BDD", "SpecBDD", "StoryBDD"],
    "homepage":     "https://github.com/richardmiller/BehatSpec",
    "type":         "library",
    "license":      "MIT",
    "authors":      [
        {
            "name":      "Richard Miller",
            "email":     "mrrmiller46@gmail.com",
            "homepage":  "http://richardmiller.co.uk"
        }
    ],
    "require": {
        "php": ">=5.6",
        "phpspec/phpspec": "^3.0",
        "behat/behat": "^3.0,>=3.0.4",
        "rmiller/caser": "^0.1"
    },
    "replace": {
        "rmiller/behat-spec-extension": "self.version",
        "rmiller/error-extension": "self.version",
        "rmiller/phpspec-extension": "self.version",
        "rmiller/exemplify-extension": "self.version",
        "rmiller/phpspec-run-extension": "self.version"
    },
    "autoload": {
        "psr-4": {
            "RMiller\\BehatSpec\\": "src/Extension/BehatSpecExtension",
            "RMiller\\BehatSpec\\Extension\\ErrorExtension\\": "src/Extension/ErrorExtension/src",
            "RMiller\\BehatSpec\\Extension\\ExemplifyExtension\\": "src/Extension/ExemplifyExtension/src",
            "RMiller\\BehatSpec\\Extension\\PhpSpecExtension\\": "src/Extension/PhpSpecExtension/src",
            "RMiller\\BehatSpec\\Extension\\PhpSpecRunExtension\\": "src/Extension/PhpSpecRunExtension/src"
        }
    },
    "minimum-stability": "stable"
}
